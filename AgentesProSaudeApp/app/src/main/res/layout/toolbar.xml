<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/corPrincipal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- abre um drawer layout se o osuário clica na imagem usando um método da activity EscolhaQuestionário-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="acessarMenu"
            android:src="@drawable/ic_menu">
        </ImageView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tituloPag1"
            android:textSize="22sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white">
        </TextView>

    </LinearLayout>

    <!-- barra -->
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/cinzaEscuro">
    </View>

</LinearLayout>

